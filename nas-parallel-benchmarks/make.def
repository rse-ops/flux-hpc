MPIF77 = mpif77
MPIF90 = mpif90
MPICC  = mpicc
MPICXX = mpicxx # Only needed if you build the DT benchmark
F77     = $(MPIF77)
F90     = $(MPIF90)
FFLAGS  = -O3 -fallow-argument-mismatch
F90FLAGS = -O3 -fallow-argument-mismatch
F_INC   =
F_LIB   =
CC      = $(MPICC)
CXX     = $(MPICXX) # Only needed if you build the DT benchmark
CFLAGS  = -O3
CXXFLAGS = -O3     # Only needed if you build the DT benchmark
C_INC   =
C_LIB   = -lm
FLINK   = $(MPIF77)
CLINK   = $(MPICC)
FLINKFLAGS = $(FFLAGS)
CLINKFLAGS = $(CFLAGS)
BINDIR  = ../bin
SYSPEC_FLAG =
RAND    = randi8
WTIME   = wtime.c
